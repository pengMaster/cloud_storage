<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">

    <android.support.v7.widget.CardView
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17dp"
        tools:ignore="HardcodedText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mLlTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_pay_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8s"
                    android:textColor="@color/red"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="后自动关闭"
                    android:textColor="@color/black_34"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_pay_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mLlAppName"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="请牢记应用名称和图标"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/mLlAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mLlTop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mIvIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_space" />

                <TextView
                    android:id="@+id/mTvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="私密云盘"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black_34"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>